<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{$title}} - 新闻资讯</title>
    <link rel="stylesheet" type="text/css" href="{{$__theme}}stylesheets/style.css" />
    <script src="{{$__static}}Tangram/tangram.js/src/tangram.js" use-debug-mode></script>
    <script src="{{$__theme}}scripts/common.js"></script>
</head>

<body>
    {{@includes/header.niml}}
    <div class="common-banner">
        <div class="container">
            <img class="banner" src="{{$__theme}}images/banner.jpg">
        </div>
    </div>
    <div class="outer-box">
        <div class="mid1920">
            <div class="container">
                <aside class="left">
                    <h1>新闻资讯</h1>

                    <nav>
                        <div class="left-mask">&nbsp;</div>
                        <ul>
                            <li class="{{.checkcurrent('link_news/category/17', $column, 'on')}}"><a href="/news/category/17">集团新闻</a></li>
                            <li class="{{.checkcurrent('link_news/category/16', $column, 'on')}}"><a href="/news/category/16">行业动态</a></li>
                        </ul>
                    </nav>
                </aside>
                <div class="main">
                    <div class="main-top">
                        <div class="main-top-dir"><a href="/news/">新闻资讯</a>&gt;<a href="/news/category/{{$category.id}}">{{$category.name}}</a>&gt;<a href="/news/detail/{{$ID}}">正文</a></div>
                    </div>
                    <div class="main-content">
                        <div class="right-article">
                            <h2 class="news-title">{{$TITLE}}</h2>
                            <p class="news-info"><span>日期:<time value="$PUBTIME" format="Y-m-d" /></span><span>来源:<if $ORIGINATE_URL><a href="{{$ORIGINATE_URL}}" target="_blank">{{$PRESS}}</a><else/>{{$PRESS}}</if></span><span>作者:{{$REPORTER}}</span></p>
                            <article class="article-content">
                                {{$CONTENT}}</article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">{{$option_common_bottom}}</div>
</body>

</html>